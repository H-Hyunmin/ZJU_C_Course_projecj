{
    "version": "2.0.0",
    "tasks": [{
        "args": [
            "-fexec-charset=GBK",
            "-lwinmm"
        ],
        
            "type": "shell",
            "label": "Build",
            "command": "make build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
